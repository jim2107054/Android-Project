<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayoutB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <!-- Header -->
        <TextView
            android:id="@+id/etProfileB1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#F48A22"
            android:gravity="center"
            android:padding="16dp"
            android:text="Find Your Dream Home"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Horizontal Scrollable Images -->
        <HorizontalScrollView
            android:id="@+id/imageScroll"
            android:layout_width="0dp"
            android:layout_height="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfileB1">

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Details Section -->

        <TextView
            android:id="@+id/etRentIT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Final Rent"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageScroll" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Room Size"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/etRentIT1"
            app:layout_constraintTop_toBottomOf="@+id/imageScroll" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Roommate"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/imageScroll" />

        <TextView
            android:id="@+id/etpriceIT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/etRentIT1"
            app:layout_constraintTop_toBottomOf="@+id/etRentIT1" />

        <TextView
            android:id="@+id/etsizeIT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="50 sq. m"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ImageView
            android:id="@+id/etRoommeIT1"
            android:layout_width="38dp"
            android:layout_height="27dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Roommates"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/roome" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Price icon"
            app:layout_constraintStart_toStartOf="@+id/etRentIT1"
            app:layout_constraintTop_toBottomOf="@+id/etRentIT1"
            app:srcCompat="@drawable/taka" />

        <TextView
            android:id="@+id/etRentB1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Rent without bills                                     2000 TK"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etpriceIT1"
            app:layout_constraintTop_toBottomOf="@+id/etpriceIT1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/etUtilitiesB1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Utilities                                                           N.A."
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etRentB1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etRentB1"
            app:layout_constraintTop_toBottomOf="@+id/etRentB1"
            app:layout_constraintVertical_bias="0.004" />

        <TextView
            android:id="@+id/etExistingThingsB1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Fee for existing equipment                        N.A."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/etUtilitiesB1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etUtilitiesB1"
            app:layout_constraintTop_toBottomOf="@+id/etUtilitiesB1" />

        <TextView
            android:id="@+id/etDepositB1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Deposit                                                       3000 TK"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/etExistingThingsB1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etExistingThingsB1"
            app:layout_constraintTop_toBottomOf="@+id/etExistingThingsB1" />

        <!-- Facilities are -->

        <TextView
            android:id="@+id/etFacilitiesB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif"
            android:text="Facilities"
            android:textColor="#F69C18"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDepositB1"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/etFacilitiesB1"
            app:layout_constraintHorizontal_bias="0.579"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etFacilitiesB1"
            app:srcCompat="@drawable/bed" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/etFacilitiesB1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1"
            app:srcCompat="@drawable/fan" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="28dp"
            android:layout_height="46dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/etFacilitiesB1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img2"
            app:srcCompat="@drawable/water" />

        <ImageView
            android:id="@+id/imgCCtvB1"
            android:layout_width="38dp"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/etFacilitiesB1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/cctv" />

        <TextView
            android:id="@+id/etbedB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Bed will be provided."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toEndOf="@+id/img1"
            app:layout_constraintTop_toBottomOf="@+id/etDepositB1" />

        <TextView
            android:id="@+id/etFanB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Fan and Fight are already in the Room."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toEndOf="@+id/img2"
            app:layout_constraintTop_toBottomOf="@+id/etbedB1" />

        <TextView
            android:id="@+id/etWaterB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Pure water supply. Deep tube wells \nare set up at the house."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/etFanB1" />

        <TextView
            android:id="@+id/etCCtvB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="24/7 monitoring."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toEndOf="@+id/imgCCtvB1"
            app:layout_constraintTop_toBottomOf="@+id/etWaterB1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>